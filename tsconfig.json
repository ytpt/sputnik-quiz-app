{
    "compilerOptions": {
      "baseUrl": "src",
      "target": "es5",
      "allowJs": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "module": "commonjs",
      "jsx": "react"
    },
    "include": [
      "src",
      "./src/declaration.d.ts"
    ],
    "exclude": ["node_modules"],
    "types": ["jest"],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    }
}